{% extends 'base.html.twig' %}

{% block title %}Liste des continents{% endblock %}

{% block body %}
    {% for continent in continents %}
        <h2 class="border-bottom border-primary"><a href="{{ path('afficher_continent', {'id':continent.id}) }}">{{continent.libelle}}</h2>
        {% for animal in continent.animaux %}
            <div class="col-6">
                <div class="row align-items-center">
                    <img src="images/{{ animal.image }}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2><a href=" path('afficher_animal')"
                </div>
            </div>
        {% endfor %}    
    {% endfor %}
{% endblock %}
