{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block monTitre %}Affichage de l'animal : {{animal.pseudo}}{% endblock %}

{% block body %}
<div class="container">
   <div class="row align-items-center">
        <div class="col-4 p-3">
            <div class="card" style="width: 18rem;">
                <img src="{{asset('images/' ~ animal.image)}}" class="img">
            </div>
        </div>
        <div class="card col-8 align-self-stretch">
            <div class="card-body">
                <div>Espèce: {{ animal.nom }}</div>
                <div>Description: {{ animal.description }}</div>
                <div>Poids (kg): {{ animal.poids }}</div>
                <div>Dangerosité:
                    {% if animal.dangereux %}
                        <span class="badge bg-danger">OUI</span>
                    {% else %}
                        <span class="badge bg-success">NON</span>
                    {% endif %}
                </div>
                <div>Famille:
                    <a href="{{ path('afficher_famille', {'id' : animal.famille.id}) }}" class="btn btn-primary">{{ animal.famille.libelle }}</a>
                    <div>Continent d'origine:
                        {% for continent in animal.continents %}
                            <a href="{{ path('afficher_continent', {'id':continent.id}) }}" class="btn btn-warning">{{ continent.libelle }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
   </div>
</div>
{% endblock %}