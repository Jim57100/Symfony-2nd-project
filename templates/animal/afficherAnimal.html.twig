{% extends 'base.html.twig' %}

{% block monTitre %}Affichage de l'animal : {{animal.nom}}{% endblock %}

{% block body %}
   <div class="row align-items-center">
        <div class="col-4 text-center p-3">
            <div class="card" style="width: 18rem;">
                <img src="{{asset('images/' ~ animal.image)}}" class="img">
                <div class="col-8">
                    <div class="card-body">
                        <div class="card-text">
                            <div>Description :{{ animal.description }}</div>
                            <div>Poids (kg) :{{ animal.poids }}</div>
                            <div>Dangerosit√© :
                                {% if animal.dangereux %}
                                    <span class="badge bg-danger">OUI</span>
                                {% else %}
                                    <span class="badge bg-success">NON</span>
                                {% endif %}
                            </div>
                            <div><a href="{{ path('afficher_famille', {'id' : animal.famille.id}) }}" class="btn btn-primary"> {{ animal.famille.libelle }}</a>
                            {% for continent in animal.continents %}
                                    <div><a href="{{ path('afficher_continent', {'id':continent.id}) }}" class="btn btn-warning">{{ continent.libelle }}</a></div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
{% endblock %}